<div class="container mx-auto bg-gray-900 h-screen w-screen flex flex-col">
  <h1
    class="neon font-bold text-4xl mx-auto text-center py-4 px-3 pt-10 text-pink-700"
  >
    Late Night
  </h1>

  <h1
    class="flux font-bold text-4xl mx-auto text-center pb-4 px-3  text-pink-700"
  >
    Entertainment
  </h1>

  {{#if (eq step 0)}}
    <ViewAllGames
      @gameSelected={{this.selectGame}}
      @selectedGame={{this.selectedGame}}
    />
  {{else if (eq step 1)}}
    <InputUsername @usernameSelected={{this.usernameSelected}} />
  {{else if (eq step 2)}}
    <div class="grid grid-cols-2 gap-4 px-2 mt-4">
      <button
        type="button"
        class="flex-auto mb-2 bottom-0 shadow-md border-solid border-2 border-red-500 px-4 py-5 rounded hover:bg-red-500 text-white font-semibold"
        {{on "click" this.hostGame}}
      >
        Host
      </button>
      <button
        type="button"
        class="flex-auto mb-2 bottom-0 shadow-md border-solid border-2 border-red-500 px-4 py-5 rounded hover:bg-red-500 text-white font-semibold"
        {{on "click" this.joinGame}}
      >
        Join
      </button>
    </div>
  {{else if (eq step 3)}}
    <GameLobby @username={{this.username}} @host={{this.host}} />
  {{/if}}
</div>