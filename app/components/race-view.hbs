<div class="flex flex-col overflow-hidden chicken-race-lanes">
  {{#each-in @race key="name" as |horseName horse|}}
    <div class="flex w-full border-0 border-b-2 border-red-900 mb-2 pb-2 relative">
      <div class="absolute text-white right-0 bottom-0">
        {{horseName}}
      </div>
      <div
        id={{concat "horse-" horseName}}
        class="horse-in-race h-16 w-full"
        {{did-insert this.insertedHorse horse.position}}
        {{did-update this.updatedHorse horse.position}}
      >
        <div class="h-16 w-16">
          <RaceChicken />
        </div>
      </div>
    </div>
  {{/each-in}}
</div>